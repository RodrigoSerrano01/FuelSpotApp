<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    >


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@color/grayBG"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="359dp"
            android:layout_height="match_parent"
            android:background="@drawable/item_spot_background">

            <ImageView
                android:id="@+id/starIcon"

                android:layout_width="29dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_star_icon"

                app:layout_constraintBottom_toTopOf="@+id/openSpotButton"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/openSpotButton"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0" />

            <TextView
                android:id="@+id/spotReviewScore"
                android:layout_width="20dp"
                android:layout_height="0dp"
                android:text="4.5"
                app:layout_constraintBottom_toBottomOf="@+id/starIcon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/starIcon"
                app:layout_constraintTop_toTopOf="@+id/starIcon"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/gasolinaComumText"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:background="@drawable/gasolinacomum_background"
                android:text="@string/gasolinaComumText"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.093" />

            <TextView
                android:id="@+id/spotCommonPrice"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginEnd="208dp"
                android:background="@drawable/gasoline_price"
                android:fontFamily="@font/ds_digil"
                android:padding="2dp"

                android:text="5,30"
                android:textColor="@color/white"
                android:textSize="30dp"

                app:layout_constraintBottom_toBottomOf="@+id/gasolinaComumText"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/gasolinaComumText"
                app:layout_constraintTop_toTopOf="@+id/gasolinaComumText"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/gasolinaAditivadaText"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:background="@drawable/gasolinaaditivacada_background"
                android:text="@string/gasolinaAditivadaText"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.75" />

            <TextView
                android:id="@+id/spotAdPrice"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginEnd="208dp"
                android:background="@drawable/gasoline_price"
                android:fontFamily="@font/ds_digil"
                android:padding="2dp"
                android:text="5,30"
                android:textColor="@color/white"
                android:textSize="30dp"

                app:layout_constraintBottom_toBottomOf="@+id/gasolinaAditivadaText"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/gasolinaAditivadaText"
                app:layout_constraintTop_toTopOf="@+id/gasolinaAditivadaText"
                app:layout_constraintVertical_bias="0.0" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/openSpotButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button"
                android:paddingStart="30dp"
                android:paddingEnd="30dp"
                android:text="@string/visualizarText"
                android:textAllCaps="true"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.855"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.807" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/spotName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:background="@color/orange"
        android:padding="2dp"
        android:text="Nome do Posto"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/cardView"
        app:layout_constraintEnd_toEndOf="@+id/cardView"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/cardView" />

</androidx.constraintlayout.widget.ConstraintLayout>