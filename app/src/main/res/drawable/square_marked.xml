<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Quadrado com fundo -->
    <item>
        <shape android:shape="rectangle">
            <size android:width="40dp" android:height="40dp" />
            <stroke android:color="#000000" android:width="1dp" />
            <corners android:radius="4dp" />

        </shape>
    </item>

    <!-- Linha horizontal do símbolo "+" -->
    <item android:top="10dp" android:left="10dp" android:right="10dp" android:bottom="10dp">

    <shape android:shape="line">
            <stroke android:color="#000" android:width="4dp" /> <!-- Cor e largura da linha -->
            <size android:width="10dp" android:height="2dp" /> <!-- Tamanho da linha -->
        </shape>
    </item>

    <!-- Linha vertical do símbolo "+" -->
    <item android:top="10dp" android:left="10dp" android:right="10dp" android:bottom="10dp">

    <rotate android:fromDegrees="90">
            <shape android:shape="line">
                <stroke android:color="#000" android:width="4dp" /> <!-- Cor e largura da linha -->
                <size android:width="10dp" android:height="4dp" /> <!-- Tamanho da linha -->
            </shape>
        </rotate>
    </item>
</layer-list>
